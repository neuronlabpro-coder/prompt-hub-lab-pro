modules = ["nodejs-20", "web", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg"]

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c './node_modules/.bin/vite --host 0.0.0.0 --port 5000 & node --env-file=.env -r tsx server/index.js & wait'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
integrations = ["javascript_database:1.0.0"]
expertMode = true

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 40433
externalPort = 80
